<%= image_tag("bannergoals.png", :alt => "Design") %>
<h1 style="position:relative; top:-70px" >I should...
</h1>
<br>
<% if user_signed_in? %>
<div class="panel panel-primary">
  <div class="panel-heading">    
   Daily Habits
  <div class="btn-group pull-right">
    <%= link_to '', new_dailyhabit_path, class: "glyphicon glyphicon-plus" %>
  </div>
  </div>
  <table class="table table-condensed table-hover">
    <col width="20">     
    <col>
    <col>
    <col width="40">
    <thead>
      <tr>
        <th></th>
        <th>Description</th>
        <th>Streak</th>    
        <th></th>
      </tr>
    </thead>    
    <tbody>
      <% @habits.each do |habit| %>
        <% if habit.user == current_user %>
          <% if habit.interval == 'Daily' %>
            <tr>          
              <td>
                  <% if habit.done == true %>
                    <%= link_to ''.html_safe, {:action => 'toggle_action', :id =>habit.id}, class: 'glyphicon glyphicon-ok' %>
                  <% else %>
                    <%= link_to ''.html_safe, {:action => 'toggle_action', :id =>habit.id}, class: 'glyphicon glyphicon-remove' %>                    
                  <% end %>        
              </td>          
              <td>
                <%= link_to edit_habit_path(habit) do %>
                  <%= habit.description %>
                <% end %>
              </td>
              <td>
                <%= habit.streak %>
              </td>              
               <td>
                <%= link_to habit, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                <% end %>
              </td> 
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
