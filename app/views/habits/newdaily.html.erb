<h1>New Daily habit</h1>
<%= form_for(@habit) do |f| %>
  <% if @habit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

      <ul>
      <% @habit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "30x4"  %>
  </div>
  <%= f.hidden_field :done, :value => false %>
  <%= f.hidden_field :interval, :value => 'Daily' %>
  <div class="field">
    <%= f.label "Goal" %><br>
  <%= f.select(:goal_id, [["==None==", 0]] + Goal.where(:user_id => current_user).collect {|goal| [ goal.description, goal.id ] }) %>    
  </div>   
  <div class="actions">
    <%= f.submit "Create Daily Habit", class: "btn btn-primary btn-med" %>
  </div>
<% end %>

<%= link_to "Back", habits_path, class: "btn btn-default btn-med" %>
