<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "30x4"  %>
  </div>
  <div class="field">
    <%= f.label "Due" %><br> 
    <%= f.text_field :dueDate, :value => @task.dueDate.strftime("%A %B %d"), 'data-behaviour' => 'datepicker' %>
    <!-- todo: write below as coffee script -->
    <script type="text/javascript">
      $(document).on("focus", "[data-behaviour~='datepicker']", function(e){
          $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true, "todayHighlight": true})
      });
    </script>
  </div>
  <div class="field">
    <%= f.label :progress %><br>
    <%= f.select(:progress, options_for_select({"Not Started" => 0, "Needs Work" => 1, "On Track" => 2, "Complete" => 3}, @task.progress), :prompt => "Choose") %>
   </div> 
    <div class="field">
    <%= f.label "Goal" %><br>
    <%= f.select :goal_id, options_for_select(Goal.where(:user_id => current_user).collect{ |goal| [goal.description, goal.id] }) %>
  </div>    
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-med" %>
  </div>
<% end %>
